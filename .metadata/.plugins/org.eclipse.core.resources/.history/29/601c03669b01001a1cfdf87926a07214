
public class Pilot {

	private String name;
	private int amount;
	
	public Pilot(String name){
		this.name = name;
	}
	
	public void newFlight(){
		System.out.println(name+": Welcome aboard!");
		amount ++;
	}
	
	
	public static void main(String[] args){
		Pilot p = new Pilot("Stephen");
		Plane plane = new PlaneAdapter(p);
		
	}
	
}
